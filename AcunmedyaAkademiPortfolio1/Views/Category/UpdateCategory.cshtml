@model AcunmedyaAkademiPortfolio1.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>

<form method="post">
    <label>Kategori Id</label>
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
    <br />
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })

    <input type="text" class="form-control" name="CategoryName" style="border:groove" />
    <br />
    <button class="btn btn-info">Kategoriyi Güncelle</button>
</form>

