@model List<AcunmedyaAkademiPortfolio1.Models.TblCategory>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>CategoryList</h2>


<p>Burası kategorilerin listeleneceği sayfamız olacaktır.</p>
<p>Bu bir test çalışmasıdır.</p>
<h3>Berk Bekar</h3>
<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</td>
        </tr>
    }
</table>

<a href="~/Views/Category/CreateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>