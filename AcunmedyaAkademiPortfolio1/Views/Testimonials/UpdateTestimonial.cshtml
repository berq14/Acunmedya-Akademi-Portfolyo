@model AcunmedyaAkademiPortfolio1.Models.TblTestimonial
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>
<<form method="post">
    <label>Referans Id</label>
    @Html.TextBoxFor(x => x.TestimonialId, new { @class = "form-control hidden" })

    <label>Referans Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Ad soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextBoxFor(x => x.CommentDetail, new { @class = "form-control" })
    <br />

    <label>Görsel</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />



    <button class="btn btn-success">Tecrübeyi Güncelle</button>
</form>