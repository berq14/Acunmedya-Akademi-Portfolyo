@model List<AcunmedyaAkademiPortfolio1.Models.TblProject>

@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Tecrübe listesi</h2>


<p>Burası Yeteneklerin listeleneceği sayfamız olacaktır.</p>
<p>Bu bir test çalışmasıdır.</p>
<h3>Berk Bekar</h3>
<table class="table table-bordered">
    <tr>
        <th>Project Id</th>
        <th>Project Adı</th>
        <th>Project Değeri</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.ProjectTitle</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger">Sil</td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-success">Güncelle</td>
        </tr>
    }
</table>

<a href="/Projects/CreateProject" class="btn btn-primary">Yeni Tecrübe Girişi</a>