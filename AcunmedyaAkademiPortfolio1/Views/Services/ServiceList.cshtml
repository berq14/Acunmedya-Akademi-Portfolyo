@model List<AcunmedyaAkademiPortfolio1.Models.TblService>

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Servis listesi</h2>


<p>Burası Servislerin listeleneceği sayfamız olacaktır.</p>
<p>Bu bir test çalışmasıdır.</p>
<h3>Berk Bekar</h3>
<table class="table table-bordered">
    <tr>
        <th>Service Id</th>
        <th>Servis Başlığı</th>
        <th>Servis Açıklama</th>
        <th>Servis ikonu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.ServiceTitle</td>
            <td>@item.Description</td>
            <td>@item.IconUrl</td>
            <td><a href="/Services/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</td>
            <td><a href="/Services/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</td>
        </tr>
    }
</table>

<a href="/Services/CreateService" class="btn btn-primary">Yeni Tecrübe Girişi</a>