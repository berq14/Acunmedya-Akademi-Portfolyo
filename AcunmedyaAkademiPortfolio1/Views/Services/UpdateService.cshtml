@model AcunmedyaAkademiPortfolio1.Models.TblService
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yetenek Güncelleme Sayfası</h2>
<<form method="post">
    <label>Servis Id</label>
    @Html.TextBoxFor(x => x.ServiceId, new { @class = "form-control hidden" })

    <label>Servis Başlık</label>
    @Html.TextBoxFor(x => x.ServiceTitle, new { @class = "form-control" })
    <br />
    <label>Servis Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>İkon Url</label>
    @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control" })
    <br />


    <button class="btn btn-success">Tecrübeyi Güncelle</button>
</form>