@model List<AcunmedyaAkademiPortfolio1.Models.TblAbout>

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p>@Model.FirstOrDefault().Title</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Model.FirstOrDefault().PhotoUrl" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.FirstOrDefault().JobTitle</h2>
                <p class="fst-italic py-3">
                    Kişisel bilgilerime aşağıdan erişebilirsiniz.
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Günü:</strong> <span>@Model.FirstOrDefault().Birthday</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model.FirstOrDefault().Website</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@Model.FirstOrDefault().Phone</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@Model.FirstOrDefault().City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@Model.FirstOrDefault().Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Okul Durumu:</strong> <span>@Model.FirstOrDefault().Degree</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.FirstOrDefault().Email<span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@Model.FirstOrDefault().Freelance</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    @Model.FirstOrDefault().Description
                </p>
            </div>
        </div>

    </div>

</section>
