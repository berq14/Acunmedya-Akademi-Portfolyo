@model List<AcunmedyaAkademiPortfolio1.Models.TblSocialMedia>
<section id="hero" class="hero section ">

    <img src="~/MyResume-1.0.0/berk3.jpg" alt="">

    <div class="container" data-aos="zoom-out">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <h2>Berk Bekar</h2>
                <p>Ben, <span class="typed" data-typed-items=".NET Developer, Devops, Biraz müzisyen">Designer</span><span class="typed-cursor typed-cursor--blink" aria-hidden="true"></span></p>
                <div class="social-links">

                    @foreach (var item in Model)
                    {
                        if (item.SocialMedia == "Twitter")
                        {
                            <a href="@item.AccountLink"><i class="bi bi-twitter-x"></i></a>
                        }
                        else if (item.SocialMedia == "Instagram")
                        {
                            <a href="@item.AccountLink"><i class="bi bi-instagram"></i></a>
                        }
                        else
                        {
                            <a href="@item.AccountLink"><i class="bi bi-linkedin"></i></a>
                        }
                    }
                    <a href="#"><i class="bi bi-facebook"></i></a>
                </div>
            </div>
        </div>
    </div>

</section>
